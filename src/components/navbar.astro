---
import Global from "./icons/Global.astro";
---

<nav
  id="navbar"
  class="bg-gray-800 bg-opacity-90 w-full z-10 items-center fixed top-0 dark:bg-transparent"
>
  <div class="max-w-screen-xl flex items-center justify-between mx-auto p-4">
    <a href="#" class="flex items-center space-x-4">
      <img
        src="../../public/volta_logo.png"
        class="h-20"
        alt="Alessandro Volta Logo"
      />
      <span class="text-3xl font-semibold text-white">
        Alessandro Volta
      </span>
    </a>
    
    <button
      data-collapse-toggle="navbar-dropdown"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-3xl text-gray-500 rounded-lg md:hidden hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-200"
      aria-controls="navbar-dropdown"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    
    <div class="hidden w-full md:block md:w-auto" id="navbar-dropdown">
      <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border text-[20px] font-bold md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0">
        
        <li>
          <a
            href="#"
            class="block py-2 px-3 text-gray-300 rounded hover:bg-gray-700 md:hover:bg-transparent md:border-0 md:hover:text-white md:p-0"
            aria-current="page"
          >
            Inicio
          </a>
        </li>
        
        <li>
          <a
            href="#"
            class="block py-2 px-3 text-gray-300 rounded hover:bg-gray-700 md:hover:bg-transparent md:border-0 md:hover:text-white md:p-0"
          >
            Sobre Nosotros
          </a>
        </li>
        
        <li>
          <a
            href="#"
            class="block py-2 px-3 text-gray-300 rounded hover:bg-gray-700 md:hover:bg-transparent md:border-0 md:hover:text-white md:p-0"
            aria-current="page"
          >
            Indumentaria
          </a>
        </li>
      
        <li>
          <a
            href="#"
            class="block py-2 px-3 text-gray-300 rounded hover:bg-gray-700 md:hover:bg-transparent md:border-0 md:hover:text-white md:p-0"
          >
            Contacto
          </a>
        </li>
        

        <li>
          <a
            href="#dropdownNavbarLink"
            id="dropdownNavbarLink"
            title="Redes Sociales"
            data-dropdown-toggle="dropdownNavbar"
            class="flex items-center justify-between w-full py-2 px-3 text-gray-300 rounded hover:bg-gray-700 md:hover:bg-transparent md:border-0 md:hover:text-white md:p-0 md:w-auto"
          >
            <Global />
          </a>

          <div id="dropdownNavbar" class="z-10 hidden font-bold bg-white divide-y divide-gray-700 rounded-lg shadow w-44">
            <ul class="pt-2 text-sm text-gray-700" aria-labelledby="dropdownLargeButton">
              <li>
                <a href="#" class="block px-4 py-2 hover:bg-gray-700 text-gray-500">Youtube</a>
              </li>
              <li>
                <a href="#" class="block px-4 py-2 hover:bg-gray-700 text-gray-500">Facebook</a>
              </li>
              <li>
                <a href="#" class="block px-4 py-2 hover:bg-gray-700 text-gray-500">X</a>
              </li>
              <li>
                <a href="#" class="block px-4 py-2 hover:bg-gray-700 text-gray-500">Tik Tok</a>
              </li>
            </ul>
          </div>
        </li>
        
      </ul>
    </div>
  </div>
</nav>

<style>
  @keyframes add-shadow {
    to {
      box-shadow: 0 5px 50px -5px hsla(0, 0%, 100%, 0.1), 0 0 0 1px hsla(0, 0%, 100%, 0.1);
      background: rgba(0, 0, 0, 0.3);
    }
  }

  #navbar {
    backdrop-filter: blur(10px);
    animation: add-shadow linear both;
    position: sticky;
    top: 0;
    z-index: 20;
  }

  #navbar {
    animation-timeline: scroll();
    animation-range: 0 150px;
  }


  #navbar {
    background: rgba(0, 0, 0, 0.7); 
  }

  #navbar a {
    color: #d1d5db; 
  }

  #navbar a:hover {
    color: #ffffff; 
  }
</style>
